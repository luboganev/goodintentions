<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <!-- First declare a custom theme attribute that'll
         reference a style resource. -->
    <declare-styleable name="AppTheme">
        <attr name="removableRowButtonStyle" format="reference" />
    </declare-styleable>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="removableRowButtonStyle">@style/removableRowButton</item>
    </style>
    
    <style name="removableRowButton" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/removeable_item_background</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableRight">@drawable/ic_content_remove</item>
    </style>

</resources>
